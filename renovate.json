{
  "extends": ["config:recommended"],
  "branchPrefix": "konflux/",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": false
    },
    {
      "enabled": true,
      "automerge": false,
      "baseBranches": ["rhoai-2.13"],
      "matchManagers": ["tekton", "dockerfile"]
    },
    {
      "enabled": true,
      "automerge": true,
      "baseBranches": ["main"],
      "matchManagers": ["tekton", "dockerfile"],
      "updateTypes": ["patch", "digest", "bump"]
    }
  ]
}