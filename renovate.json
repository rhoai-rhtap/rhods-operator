{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "branchPrefix": "renovate/",
  "packageRules": [
    {
      "enabled": true,
      "automerge": true,
      "baseBranches": ["rhoai-2.13"],
      "matchFileNames": ["*Dockerfile*"],
      "updateTypes": ["digest"]
    },
    {
      "enabled": false,
      "baseBranches": ["main"],
      "matchFileNames": ["*Dockerfile*"],
      "updateTypes": ["digest"]
    }
  ],
 "prHourlyLimit": 0
}
