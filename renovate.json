{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "branchPrefix": "renovate/",
  "packageRules": [
    {
      "enabled": true,
      "automerge": true,
      "baseBranches": ["rhoai-2.13"],
      "matchManagers": ["tekton", "dockerfile"],
      "updateTypes": ["digest"]
    },
    {
      "matchUpdateTypes": [
        "major",
        "bump",
        "patch"
      ],
      "enabled": false
    }
  ],
 "prHourlyLimit": 0
}
