{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "branchPrefix": "renovate/",
  "baseBranches": ["rhoai-2.13"],
  "ignoreTests": true,
  "automergeType": "pr",
  "automerge": true,
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "enabled": false
    },
    {
      "matchManagers": ["dockerfile", "tekton"],
      "enabled": true
    },
    {
      "matchUpdateTypes": ["*"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["digest"],
      "enabled": true
    },
    {
      "enabled": true,
      "matchFileNames": ["*Dockerfile*", ".tekton/*.yaml"]
    }
  ],
 "prHourlyLimit": 0
}
