{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended"
  ],
  "branchPrefix": "renovate/",
  "packageRules": [
    {
      "matchPackagePatterns": ["*"],
      "enabled": false
    },
    {
      "matchManagers": ["dockerfile"],
      "enabled": true
    },
    {
      "matchUpdateTypes": ["*"],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["digest"],
      "enabled": true
    },
    {
      "enabled": true,
      "automerge": true,
      "baseBranches": ["rhoai-2.13"],
      "matchFileNames": ["*Dockerfile*"]
    },
    {
      "enabled": false,
      "baseBranches": ["main"],
      "matchFileNames": ["*Dockerfile*"]
    }
  ],
 "prHourlyLimit": 0
}
